<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background_image"
        android:scaleType="centerCrop"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:background="@color/colorDark55"
                app:iss_title_background="@color/transparent"
                app:iss_placeholder="@drawable/logo"
                android:layout_margin="20dp"
                app:iss_auto_cycle="true"
                app:iss_period="1000"
                app:iss_delay="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELAMAT DATANG!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorLight"
                android:layout_margin="5dp"
                android:textAlignment="viewStart"
                android:gravity="start" />
            <TextView
                android:id="@+id/name_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YTH Rekan "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorLight"
                android:layout_margin="5dp"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:layout_marginBottom="5dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="35dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/referal_greeting"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorLight"
                        android:lineSpacingExtra="4dp"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:gravity="start"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:id="@+id/referal_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:gravity="start"
                        tools:ignore="RtlCompat"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/colorLight">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="25dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aplikasi ini di buat untuk memfasilitasi para rekan RBB agar dapat saling bertukar kontak dan informasi bisnis dengan fungsi penambahan nomor rekan dan akun sosmed RBB secara berkala."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textStatic"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/download_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Download PDF"
                app:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
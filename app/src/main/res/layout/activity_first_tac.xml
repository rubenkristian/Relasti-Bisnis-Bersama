<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    tools:context=".UI.FirstTAC">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_agree"
        android:layout_margin="10dp">
        <WebView
            android:id="@+id/termandcondition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottom_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLight"
        android:padding="10dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_agreement"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/saya_setuju"
            android:layout_marginHorizontal="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Lanjut"
            app:backgroundTint="@color/loginButton"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/loader"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/colorDark"
        android:visibility="gone"
        android:translationZ="90dp">
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/loading_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:visibility="visible"/>
    </FrameLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/star_reward"
        android:layout_width="match_parent"
        android:layout_height="242.5dp"
        android:contentDescription="@string/star_reward"
        android:src="@drawable/star_reward"
        android:layout_marginVertical="40dp"/>
    <TextView
        android:id="@+id/text_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorDark"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text=""/>
    <TextView
        android:id="@+id/text_total_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:textSize="28sp"
        android:textColor="@color/colorDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Total 6 Bintang"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dismiss_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tutup"/>
</LinearLayout>